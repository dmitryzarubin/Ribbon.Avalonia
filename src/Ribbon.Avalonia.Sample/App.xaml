<Application
    x:Class="Ribbon.Avalonia.Sample.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sample="clr-namespace:Ribbon.Avalonia.Sample"
    RequestedThemeVariant="Light">
    <Application.DataTemplates>
        <sample:ViewLocator />
    </Application.DataTemplates>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--ResourceInclude Source="avares://Ribbon.Avalonia/Locale/te-st.xaml" /-->
                <ResourceInclude Source="avares://Ribbon.Avalonia/Locale/en-ca.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://Ribbon.Avalonia/Styles/Fluent/Ribbon.Avalonia.xaml" />
    </Application.Styles>
</Application>